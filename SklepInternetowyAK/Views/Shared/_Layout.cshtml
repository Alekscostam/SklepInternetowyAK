


@using System.Security.Policy


<!DOCTYPE html>
<html>
<head>


    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Wypożyczalnia filmów</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        .test {
            text-align: center;

            font-size: 2rem;
        }
        #stopka {
            height: 100px;
            position: fixed;
            left: 0;
            bottom: 0;
            width: 100%;
            background-color: #3d3a3b;
            color: white;
            text-align: center;
        }
        .text-footer {
            padding-top: 2rem;
            margin: 40px;
            color: white;
            font-size: 2rem;

        }
        .text-footer:hover {
            text-decoration: none;
            color: gold;
        }
        #background {
            background-attachment: fixed;
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
            background-image: linear-gradient(rgba(192,192,192, 0.5), rgba(255, 255, 255, 0.7)), url(../Content/images/background.jpg);
            
        }
    </style>
</head>
<body id="background">



<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @* @Html.ActionLink("Sklep internetowy", "Index", "Home", new {area = ""}, new {@class = "navbar-brand"}) *@
        </div>
        <div class="navbar-collapse collapse text-right" >
            <ul class="nav navbar-nav">
                @* <li class="test">@Html.ActionLink("Fantasy", "Index", "Home")</li> *@
                @* <li class="test">@Html.ActionLink("Horror", "About", "Home")</li> *@
                @* <li class="test">@Html.ActionLink("Komedie", "Contact", "Home")</li> *@
                @* <li class="test">@Html.ActionLink("Sensacyjne", "Contact", "Home")</li> *@
                @* <li class="test">@Html.ActionLink("Thrillery", "Contact", "Home")</li> *@
                @Html.Action("CategoriesMenu", "Films");
            </ul>
        </div>
    </div>
</div>

<div class="container body-content" >
    
        @RenderBody()
    
    
</div>
<hr/>

<footer id="footer">
    <div id="stopka" class="container footer-content">
        <a class="text-footer" href="@Url.Action("StaticSite","Home", new { name="Onas"})">O nas</a>
        <a  class="text-footer"  href="@Url.Action("Contact","Home", new { name="Kontakt"})">Kontakt</a>
        <a class="text-footer"   href="@Url.Action("PaymentMethods","Home", new { name="MetodyPlatnosci"})">Metody Platnosci</a>
        <a  class="text-footer"  href="@Url.Action("Regulations","Home", new { name="Regulamin"})">Regulamin</a>
    </div>
</footer>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@RenderSection("scripts", required: false)
</body>
</html>
